@model Checkout.Infra.Models.Account

@{
    ViewBag.Title = "Minha Conta";
    ViewBag.AccountActive = "class = active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3><strong>Minha Conta</strong></h3>
    <hr />
    <br />
    @if (@TempData["AlertMessage"] != null)
            {
        <div class="alert alert-warning" role="alert">
            <p>@TempData["AlertMessage"]</p>
        </div>
    }
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                <p>@Model.Name</p>
            </td>
            <td>
                <p>@Model.Email</p>
            </td>
            <td>
                @if (Model.Sex == "M")
                {
                    <p>Masculino</p>
                }
                @if (Model.Sex == "F")
                {
                    <p>Feminino</p>
                }
            </td>
            <td>
                @Html.ActionLink("Adicionar Cartões", "Insert", "CreditCard") |
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Detalhes", "Detail", new { id = Model.Id })
            </td>
        </tr>

    </table>
</div>