@model Checkout.Infra.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Login</h2>
        <hr />
        <br />
        @using (Html.BeginForm("LogIn", "Access", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <table>
                <tr>
                    <td>@Html.LabelFor(a => a.Email)</td>
                    <td>@Html.TextBoxFor(a => a.Email)</td>
                    <td>@Html.ValidationMessageFor(a => a.Email)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(a => a.Password)</td>
                    <td> @Html.PasswordFor(a => a.Password) </td>
                    <td> @Html.ValidationMessageFor(a => a.Password) </td>
                </tr>
                <tr>
                    <td>@Html.ActionLink("Cadastrar-se", "Insert", "Account")</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" class="btn btn-primary" value="Entrar" />
                    </td>
                    <td></td>
                </tr>
            </table>
            <br />
            if (@TempData["AlertLogin"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    <p>@TempData["AlertLogin"]</p>
                </div>
            }
        }
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>